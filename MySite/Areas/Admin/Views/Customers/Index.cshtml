@model PagedList.IPagedList<MySite.Areas.Data_Access.EF.Customer>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="banner">
    <h2>
        <a href="/Admin/Home/Index">Home</a>
        <i class="fa fa-angle-right"></i>
        <span>Customers</span>
    </h2>
</div>

<div class="banner">
    <h2>Danh sách khách hàng</h2>
</div>
<div class="grid-form">
    <div class="grid-form1">
        <p>
            <a href="/Admin/Customers/Create" class="btn btn-primary">CREATE NEW</a>
            @*@Html.ActionLink("Create New", "Create")*@
        </p>
        <table class="table">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Address
                </th>
                <th>
                    Email
                </th>
                <th>
                    Phone Number
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telephone)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new {id = item.ID_Customer}) |
                        @Html.ActionLink("Details", "Details", new {id = item.ID_Customer}) |
                        @Html.ActionLink("Delete", "Delete", new {id = item.ID_Customer})
                    </td>
                </tr>
            }

        </table>
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
</div>
