@model MySite.Areas.Data_Access.EF.Role

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="banner">
    <h2>
        <a href="">Home</a>
        <i class="fa fa-angle-right"></i>
        <a href="/Admin/Roles/Index">Roles</a>
        <i class="fa fa-angle-right"></i>
        <span>Update</span>
    </h2>
</div>

<div class="banner">
    <h2>Cập nhật quyền</h2>
</div>

<div class="grid-form">
    <div class="grid-form1">
        @using (Html.BeginForm("EditAction", "Roles"))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Role</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID_Role)

                <div class="form-group">
                    @Html.LabelFor(model => model.Name_Role, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name_Role, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name_Role, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>
