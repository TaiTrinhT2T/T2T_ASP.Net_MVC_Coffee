@model PagedList.IPagedList<MySite.Areas.Data_Access.EF.Product>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="banner">
    <h2>
        <a href="/Admin/Home/Index">Home</a>
        <i class="fa fa-angle-right"></i>
        <span>Products</span>
    </h2>
</div>

<div class="banner">
    <h2>Danh sách sản phẩm</h2>
</div>
<div class="grid-form">
    <div class="grid-form1">
        <p>
            <a href="/Admin/Products/Create" class="btn btn-primary">CREATE NEW</a>
            @*@Html.ActionLink("Create New", "Create")*@
        </p>
        <table class="table">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Detail
                </th>
                <th>
                    Price
                </th>
                <th>
                    Image
                </th>
                <th>
                    Creating Date
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Detail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <div>
                            <img src="@item.Image" style="margin-top: 15px; width: 200px;">
                        </div>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Creating_Date)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new {id = item.ID_Product}) |
                        @Html.ActionLink("Details", "Details", new {id = item.ID_Product}) |
                        @Html.ActionLink("Delete", "Delete", new {id = item.ID_Product})
                    </td>
                </tr>
            }
        </table>
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
</div>